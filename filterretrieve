 QueryByAttribute querybyexpression = new QueryByAttribute("new_joborder");
 querybyexpression.AddAttributeValue("new_relatedcaseid",entity.Id);
 EntityCollection ec = service.RetrieveMultiple(querybyexpression);
                                            

